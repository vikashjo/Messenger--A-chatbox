  <span class="text-[.9rem] text-gray-400"><%= message.created_at.strftime("%l:%M %P") %></span>
  <i class="fa fa-ellipsis-h cursor-pointer text-[.9rem] text-gray-400 ml-3" aria-hidden="true"></i>
</div>

